{
  "name": "chat_browsers-main",
  "version": "1.0.0",
  "description": "chat with socket to communicate between two browsers remote",
  "main": "index.js",
  "scripts": {
    "server": "cd ./server_node && npm start",
    "server-install": "cd ./server_node && npm install",
    "client": "cd ./client_react && npm start",
    "client-install": "cd ./client_react && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Shay Bushary & Aviv Turgman",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}